---
/* =========================================
   PAGE: index.astro
   Main landing page — assembles all sections
   Order: Header → Hero → RoomsList → Features → Reviews → Gallery → FAQ → Footer
   ========================================= */

import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';       /* header */
import Hero from '../components/Hero.astro';           /* hero */
import RoomsList from '../components/react/RoomsList.jsx'; /* rooms */
import Features from '../components/Features.astro';  /* features */
import Reviews from '../components/react/Reviews.jsx'; /* reviews */
import Gallery from '../components/react/Gallery.jsx'; /* gallery */
import FAQ from '../components/react/FAQ.jsx';         /* faq */
import BookingRequestForm from '../components/react/BookingRequestForm.jsx'; /* booking-request */
import Footer from '../components/Footer.astro';       /* footer */
import FloatingBar from '../components/react/FloatingBar.jsx'; /* floating-bar */
import CookieConsent from '../components/react/CookieConsent';
---

<Layout>
  <Header />
  <main>
    <Hero />
    <RoomsList client:only="react" />
    <Features />
    <Reviews client:only="react" />
    <Gallery client:only="react" />
    <FAQ client:only="react" />
    <BookingRequestForm client:only="react" />
  </main>
  <Footer />
  <FloatingBar client:load />
  <CookieConsent client:load />
</Layout>
