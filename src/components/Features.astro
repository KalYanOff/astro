---
/* =========================================
   SECTION: Features
   6 key hotel advantages grid
   ========================================= */

/*
  FEATURE ICONS: Each feature has an `icon` key.
  To replace with a custom SVG, find the matching `feature.icon === '...'` block below
  and swap the <svg> content with your own SVG markup.
*/

const stats = [
  { value: '50 м', label: 'до моря' },
  { value: '30+', label: 'лет принимаем гостей' },
  { value: '4.9★', label: 'средняя оценка' },
  { value: '1000+', label: 'довольных семей' },
];

const features = [
  {
    icon: 'clock',
    title: 'Круглосуточно',
    description: 'Мы всегда рядом — работаем для вас 24/7 без перерывов и выходных!',
  },
  {
    icon: 'car',
    title: 'Бесплатная парковка',
    description: 'Закрытая охраняемая парковка — абсолютно бесплатно!',
  },
  {
    icon: 'baby',
    title: 'Детская площадка',
    description: 'Для детей оборудована игровая площадка с песочницей и качелями!',
  },
  {
    icon: 'home',
    title: 'Семейная атмосфера',
    description: 'Уютно как дома, заботливый персонал',
  },
  {
    icon: 'location',
    title: 'Удобное местоположение',
    description: 'Всё, что нужно — рядом, в нескольких минутах ходьбы!',
  },
  {
    icon: 'fire',
    title: 'Мангальная зона',
    description: 'Отдельная зона отдыха с мангалом и большим столом!',
  },
  {
    icon: 'green',
    title: 'Зелёная территория',
    description: 'Уютные уголки, утопающие в зелени, созданы для спокойного отдыха!',
  },
  {
    icon: 'wifi',
    title: 'Быстрый Wi‑Fi',
    description: 'Надёжный быстрый интернет, чтобы Вы всегда были на связи!',
  },
  {
    icon: 'price',
    title: 'Бюджетно',
    description: 'Дешевле, чем у конкурентов!',
  },
];
---

<!-- features: 6 advantage cards grid -->
<section id="features" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- features-header: section title + description -->
    <div class="text-center mb-16">

      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-amber-100 text-amber-700 text-sm font-semibold mb-4">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        Почему выбирают нас
      </div>
      <h2 class="text-4xl font-bold text-slate-900 mb-4">Отдых, который запомнится</h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Мы создаём не просто место для ночлега — мы создаём воспоминания о море, уюте и заботе.
      </p>
    </div>



    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {stats.map(stat => (
        <div class="text-center p-5 bg-white rounded-2xl shadow-lg border border-white-500 hover:bg-slate-50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 animate-fade-in">
          <div class="font-display font-bold text-3xl sm:text-4xl text-primary-600 mb-1">{stat.value}</div>
          <div class="text-sm text-gray-600 font-medium">{stat.label}</div>
        </div>
      ))}
    </div>


    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div
          class="flex gap-4 p-6 rounded-xl hover:bg-slate-50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 animate-fade-in"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="flex-shrink-0">
            <div class="w-14 h-14 rounded-full bg-white-100 flex items-center justify-center">

              {/* ICON STUB: car — replace SVG with custom icon */}
              {feature.icon === 'car' && (
                <img src="/img/icons/parking.png" class="w-10 h-10 object-contain">
              )}

              {/* ICON STUB: baby — replace SVG with custom icon */}
              {feature.icon === 'baby' && (
                <img src="/img/icons/child.png" class="w-10 h-10 object-contain">
              )}

              {/* ICON STUB: clock — replace SVG with custom icon */}
              {feature.icon === 'clock' && (
                <img src="/img/icons/open.png" class="w-10 h-10 object-contain">
              )}

              {/* ICON STUB: home — replace SVG with custom icon */}
              {feature.icon === 'home' && (
                <img src="/img/icons/love.png" class="w-10 h-10 object-contain">
              )}

              {/* ICON STUB: mappin — replace SVG with custom icon */}
              {feature.icon === 'location' && (
                <img src="/img/icons/location.png" class="w-10 h-10 object-contain">
              )}

              {feature.icon === 'wifi' && (
                <img src="/img/icons/wifi.png" class="w-10 h-10 object-contain">
              )}

              {feature.icon === 'green' && (
                <img src="/img/icons/green.png" class="w-10 h-10 object-contain">
              )}

              {feature.icon === 'price' && (
                <img src="/img/icons/price.png" class="w-10 h-10 object-contain">
              )}

              {feature.icon === 'fire' && (
                <img src="/img/icons/fire.png" class="w-10 h-10 object-contain">
              )}


            </div>
          </div>
          <div>
            <h3 class="text-lg font-bold text-slate-900 mb-2">{feature.title}</h3>
            <p class="text-slate-600">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
