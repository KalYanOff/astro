---
/* =========================================
   SECTION: Features
   6 key hotel advantages grid
   ========================================= */

/*
  FEATURE ICONS: Each feature has an `icon` key.
  To replace with a custom SVG, find the matching `feature.icon === '...'` block below
  and swap the <svg> content with your own SVG markup.
*/

const stats = [
  { value: '30+', label: 'лет принимаем гостей' },
  { value: '4.9★', label: 'средняя оценка' },
  { value: '1000+', label: 'довольных семей' },
];

const features = [
  {
    icon: 'waves',
    title: '50 метров до моря',
    description: 'Мы на первой береговой линии. До моря всего 1 минута ходьбы!',
  },
  {
    icon: 'clock',
    title: 'Круглосуточно',
    description: 'Мы всегда рядом — работаем для вас 24/7 без перерывов и выходных!',
  },
  {
    icon: 'car',
    title: 'Бесплатная парковка',
    description: 'Закрытая охраняемая парковка — абсолютно бесплатно!',
  },
  {
    icon: 'baby',
    title: 'Детская площадка',
    description: 'Для детей оборудована игровая площадка с песочницей и качелями!',
  },
  {
    icon: 'home',
    title: 'Семейная атмосфера',
    description: 'Уютно как дома, заботливый персонал',
  },
  {
    icon: 'mappin',
    title: 'Удобное местоположение',
    description: 'Всё, что нужно — рядом, в нескольких минутах ходьбы!',
  },
  {
    icon: 'mappin',
    title: 'Мангальная зона',
    description: 'Отдельная зона отдыха с мангалом и большим столом!',
  },
  {
    icon: 'mappin',
    title: 'Зелёная территория',
    description: 'Уютные уголки, утопающие в зелени, созданы для спокойного отдыха!',
  },
  {
    icon: 'mappin',
    title: 'Быстрый Wi‑Fi',
    description: 'Надёжный быстрый интернет, чтобы Вы всегда были на связи!',
  },
];
---

<!-- features: 6 advantage cards grid -->
<section id="features" class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <!-- features-header: section title + description -->
    <div class="text-center mb-16">

      <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-amber-100 text-amber-700 text-sm font-semibold mb-4">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        Почему выбирают нас
      </div>
      <h2 class="text-4xl font-bold text-slate-900 mb-4">Отдых, который запомнится</h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Мы создаём не просто место для ночлега — мы создаём воспоминания о море, уюте и заботе.
      </p>
    </div>



    <div class="grid grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {stats.map(stat => (
        <div class="text-center p-5 bg-white rounded-2xl shadow-card border border-gray-100 hover:bg-slate-50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 animate-fade-in">
          <div class="font-display font-bold text-3xl sm:text-4xl text-brand-primary mb-1">{stat.value}</div>
          <div class="text-sm text-gray-600 font-medium">{stat.label}</div>
        </div>
      ))}
    </div>


    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div
          class="flex gap-4 p-6 rounded-xl hover:bg-slate-50 transition-all duration-300 hover:shadow-lg hover:-translate-y-1 animate-fade-in"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="flex-shrink-0">
            <div class="w-14 h-14 rounded-full bg-primary-100 flex items-center justify-center">

              {/* ICON STUB: waves — replace SVG with custom icon */}
              {feature.icon === 'waves' && (
                <svg class="w-7 h-7 text-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M2 6c.6.5 1.2 1 2.5 1C7 7 7 5 9.5 5c2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/>
                  <path d="M2 12c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/>
                  <path d="M2 18c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 2.6 0 2.4 2 5 2 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/>
                </svg>
              )}

              {/* ICON STUB: car — replace SVG with custom icon */}
              {feature.icon === 'car' && (
                <svg class="w-7 h-7 text-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M19 17H5a2 2 0 0 1-2-2V9l2.4-6h11.2L19 9v6a2 2 0 0 1-2 2z"/>
                  <circle cx="7.5" cy="17" r="1.5"/>
                  <circle cx="16.5" cy="17" r="1.5"/>
                  <path d="M3 9h18"/>
                </svg>
              )}

              {/* ICON STUB: baby — replace SVG with custom icon */}
              {feature.icon === 'baby' && (
                <svg class="w-7 h-7 text-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M9 12h.01"/>
                  <path d="M15 12h.01"/>
                  <path d="M10 16c.5.3 1.2.5 2 .5s1.5-.2 2-.5"/>
                  <path d="M19 6.3a9 9 0 0 1 1.8 3.9 2 2 0 0 1 0 3.6 9 9 0 0 1-17.6 0 2 2 0 0 1 0-3.6A9 9 0 0 1 12 3c2 0 3.5 1.1 3.5 2.5s-.9 2.5-2 2.5c-.8 0-1.5-.4-1.5-1"/>
                </svg>
              )}

              {/* ICON STUB: clock — replace SVG with custom icon */}
              {feature.icon === 'clock' && (
                <svg class="w-7 h-7 text-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              )}

              {/* ICON STUB: home — replace SVG with custom icon */}
              {feature.icon === 'home' && (
                <svg class="w-7 h-7 text-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                  <polyline points="9 22 9 12 15 12 15 22"/>
                </svg>
              )}

              {/* ICON STUB: mappin — replace SVG with custom icon */}
              {feature.icon === 'mappin' && (
                <svg class="w-7 h-7 text-primary-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              )}

            </div>
          </div>
          <div>
            <h3 class="text-lg font-bold text-slate-900 mb-2">{feature.title}</h3>
            <p class="text-slate-600">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
