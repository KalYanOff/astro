---
/* =========================================
   SECTION: Hero
   Full-screen hero with background, headline,
   hero-badges, rating-badge and quick booking form
   ========================================= */
import { Car, Clock, Baby } from 'lucide-react';
import BookingModal from './react/BookingModal.jsx';
import QuickBookingForm from './react/QuickBookingForm.jsx';
---

<!-- hero: full-screen section with background -->
<section id="hero" class="relative min-h-screen flex items-center justify-center overflow-hidden py-16 md:py-0">

  <!-- hero-overlay: dark gradient over background image -->
  <div class="absolute inset-0 bg-gradient-to-b from-slate-900/70 via-slate-900/50 to-slate-900/70 z-10"></div>

  <!-- hero-bg: background image -->
  <div
    class="absolute inset-0 bg-cover bg-center"
    style="background-image: url('https://images.pexels.com/photos/1450353/pexels-photo-1450353.jpeg?auto=compress&cs=tinysrgb&w=1920');"
  ></div>

  <!-- hero-content: centered content wrapper -->
  <div class="relative z-20 container mx-auto px-4 text-center animate-fade-in w-full">

    <!-- hero-title: main hotel headline -->
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-white mb-4 md:mb-6 drop-shadow-2xl leading-tight px-2">
      Отель Дельфин - Джубга
      <br />
      <span class="text-accent-400">Отдых в 50 метрах от моря</span>
    </h1>

    <!-- hero-badges: quick benefit pills (parking, 24/7, playground) -->
    <div class="flex flex-wrap justify-center gap-2 md:gap-4 mb-4 md:mb-6">
      <div class="flex items-center gap-1.5 bg-white/90 backdrop-blur-sm rounded-full px-3 py-2 md:px-5 md:py-3 shadow-lg hover:scale-105 transition-transform">
        <Car class="w-4 h-4 md:w-5 md:h-5 text-primary-600 shrink-0" />
        <span class="text-xs md:text-sm font-medium text-slate-700 whitespace-nowrap">Бесплатная парковка</span>
      </div>
      <div class="flex items-center gap-1.5 bg-white/90 backdrop-blur-sm rounded-full px-3 py-2 md:px-5 md:py-3 shadow-lg hover:scale-105 transition-transform">
        <Clock class="w-4 h-4 md:w-5 md:h-5 text-primary-600 shrink-0" />
        <span class="text-xs md:text-sm font-medium text-slate-700 whitespace-nowrap">Круглосуточно</span>
      </div>
      <div class="flex items-center gap-1.5 bg-white/90 backdrop-blur-sm rounded-full px-3 py-2 md:px-5 md:py-3 shadow-lg hover:scale-105 transition-transform">
        <Baby class="w-4 h-4 md:w-5 md:h-5 text-primary-600 shrink-0" />
        <span class="text-xs md:text-sm font-medium text-slate-700 whitespace-nowrap">Детская площадка</span>
      </div>
    </div>

    <!-- rating-badge: star rating pill (between hero-badges and QuickBookingForm) -->
    <div class="flex justify-center mb-6 md:mb-8">
      <div class="inline-flex items-center gap-2 bg-white/95 backdrop-blur-sm rounded-full px-3 py-1.5 shadow-lg">
        <div class="flex">
          {[1, 2, 3, 4, 5].map(() => (
            <svg class="w-3.5 h-3.5 md:w-4 md:h-4 fill-yellow-400 text-yellow-400" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
          ))}
        </div>
        <span class="text-xs md:text-sm font-medium text-slate-700">4.8 на основе 127 отзывов</span>
      </div>
    </div>

    <!-- quick-booking-form: date/guests/search form -->
    <QuickBookingForm client:only="react" />

  </div>
</section>

<!-- booking-modal: full booking detail modal -->
<BookingModal client:only="react" />
