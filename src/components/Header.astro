---
/* =========================================
   SECTION: Header
   Sticky top navigation bar
   ========================================= */
import MobileMenu from './react/MobileMenu.jsx';
import { CONTACT_LINKS, SITE_PHONE_DISPLAY } from '../config/site.js';
---

<!-- header: sticky top navbar -->
<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-md shadow-sm transition-shadow">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex justify-between items-center h-16">

      <!-- header-logo: hotel logo + name + address -->
      <!-- TODO: replace logo-stub with actual logo image -->
      <a href="/" class="flex items-stretch gap-3 h-auto py-2 group">
        <div class="h-full aspect-square rounded-lg overflow-hidden flex items-center justify-center bg-slate-100 group-hover:scale-105 transition-transform">
          <!-- LOGO STUB: replace src with actual logo image path, e.g. src="/logo.svg" or src="/logo.png" -->
          <img
            src="/favicon.svg"
            alt="Отель Дельфин"
            class="w-full h-full object-contain p-1"
            width="40"
            height="40"
          />
        </div>
        <div class="flex flex-col justify-center">
          <span class="text-xl md:text-2xl font-bold text-primary-600 leading-tight">Дельфин</span>
          <span class="text-[10px] md:text-xs text-gray-500">Джубга, Набережная 7</span>
        </div>
      </a>

      <!-- header-contacts: phone + social links -->
      <div class="flex items-center gap-4">
        <!-- header-phone-desktop: visible on md+ -->
        <a
          href={CONTACT_LINKS.phone}
          class="hidden md:block font-semibold text-gray-800 hover:text-primary-600 transition-colors"
        >
          {SITE_PHONE_DISPLAY}
        </a>

        <!-- header-phone-mobile: icon on mobile -->
        <a
          href={CONTACT_LINKS.phone}
          class="md:hidden p-2 text-green-600"
          aria-label="Позвонить"
        >
          <!-- ICON STUB: phone — replace with custom SVG -->
          <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 4.69 12 19.79 19.79 0 0 1 1.61 3.44 2 2 0 0 1 3.58 1h3a2 2 0 0 1 2 1.72c.127.96.361 1.903.7 2.81a2 2 0 0 1-.45 2.11L7.91 8.56a16 16 0 0 0 5.59 5.59l.93-.94a2 2 0 0 1 2.11-.45c.907.339 1.85.573 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </a>

        <!-- header-socials: WhatsApp / Telegram / MAX -->
        <div class="flex items-center gap-2">
          <a
            href={CONTACT_LINKS.whatsapp}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full hover:bg-green-50 text-green-600 transition-colors"
            aria-label="WhatsApp"
          >
            <!-- ICON STUB: whatsapp — replace with custom SVG -->
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 0 1-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 0 1-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 0 1 2.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0 0 12.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 0 0 5.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 0 0-3.48-8.413z"/>
            </svg>
          </a>
          <a
            href={CONTACT_LINKS.telegram}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full hover:bg-blue-50 text-blue-500 transition-colors"
            aria-label="Telegram"
          >
            <!-- ICON STUB: telegram — replace with custom SVG -->
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </a>
          <a
            href={CONTACT_LINKS.max}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2 rounded-full hover:bg-gray-50 text-gray-700 transition-colors"
            aria-label="MAX"
          >
            <!-- ICON STUB: max — replace with custom SVG -->
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- mobile-menu: hamburger nav (React) -->
      <MobileMenu client:load />
    </div>
  </div>
</header>
